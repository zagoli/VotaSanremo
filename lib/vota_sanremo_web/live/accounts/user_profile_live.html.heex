<div>
  <h1 class="text-3xl"><%= @user.username %></h1>

  <section class="mt-5">
    <h2 class="text-xl font-bold" :if={not Enum.empty?(@scores)}>Votes</h2>
    <h3 class="text-lg"></h3>

    <%= if @user.votes_privacy == :public do %>
      <.performers_scores scores={@scores} />
    <% else %>
      <p><%= @user.username %> does not want to disclose his/her votes.</p>
    <% end %>
  </section>
</div>
